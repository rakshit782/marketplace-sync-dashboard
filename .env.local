# Local Development Environment
# Copy this to .env.local and customize

# ============================================
# Local API Server
# ============================================
LOCAL_API_PORT=3001

# ============================================
# Credentials Database (Local PostgreSQL)
# ============================================
CRED_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/marketplace_credentials

# ============================================
# Products Database (DynamoDB Local)
# ============================================
PRODUCTS_TABLE_NAME=MarketplaceSyncStack-ProductsTable
DYNAMODB_ENDPOINT=http://localhost:8000
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# ============================================
# Authentication
# ============================================
JWT_SECRET=local-dev-secret-key-change-in-production-min-32-chars

# ============================================
# Frontend
# ============================================
VITE_API_URL=http://localhost:3001