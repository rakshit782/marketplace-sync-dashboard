# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=your-account-id

# Credential Source Selection
# Options: 'ssm' (AWS Parameter Store), 'neon' (Neon Database), 'dotenv' (Environment Variables)
CREDENTIAL_SOURCE=ssm

# ============================================
# Option 1: AWS Systems Manager Parameter Store (Recommended for Production)
# ============================================
# Store credentials using:
# aws ssm put-parameter --name '/marketplace-sync/amazon/client-id' --value 'YOUR_VALUE' --type 'SecureString'

# ============================================
# Option 2: Neon Database (Good for Centralized Management)
# ============================================
NEON_DATABASE_URL=postgresql://user:password@your-neon-host/dbname
# Run: psql $NEON_DATABASE_URL < schema/credentials-table.sql
# Then insert credentials into api_credentials table

# ============================================
# Option 3: Environment Variables (Development Only)
# ============================================
# Amazon Seller Central
AMAZON_CLIENT_ID=your-amazon-client-id
AMAZON_CLIENT_SECRET=your-amazon-client-secret
AMAZON_REFRESH_TOKEN=your-amazon-refresh-token
AMAZON_SELLER_ID=your-seller-id
AMAZON_MARKETPLACE_ID=ATVPDKIKX0DER

# Walmart Marketplace
WALMART_CLIENT_ID=your-walmart-client-id
WALMART_CLIENT_SECRET=your-walmart-client-secret

# ============================================
# Database (for product storage)
# ============================================
DATABASE_URL=postgresql://user:password@your-neon-host/dbname
PRODUCTS_TABLE_NAME=MarketplaceSyncStack-ProductsTable

# ============================================
# API Configuration
# ============================================
API_URL=https://your-api-id.execute-api.us-east-1.amazonaws.com/prod
CLOUDFRONT_URL=https://your-distribution-id.cloudfront.net